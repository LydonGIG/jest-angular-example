{
  "preset": "jest-preset-angular",
  "setupTestFrameworkScriptFile": "<rootDir>/src/jest/setupPact.ts",
  "setupFiles": [
    "<rootDir>/src/jest/pactProvider.js"
  ],
  "globals": {
    "ts-jest": {
      "tsConfigFile": "src/tsconfig.spec.json",
      "useBabel": true
    },
    "__TRANSFORM_HTML__": true
  },
  "transform": {
    "^.+\\.(ts|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js",
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@ngrx|@mobi))"
  ],
  "testMatch": [
    "**/+(*.)+(pact).+(ts)"
  ],
  "moduleNameMapper": {
    "^.*\\.(jpg|jpeg|png|ico)$": "<rootDir>/src/jest/assetsTransformer.js",
    "@mobi/rwc-utils-ng-jslib": "<rootDir>/node_modules/@mobi/rwc-utils-ng-jslib/rwc-utils-ng-jslib.bundle.js",
    "@plandialog/invalidite$": "<rootDir>/src/app/modules/invalidite/",
    "@plandialog/salaire$": "<rootDir>/src/app/modules/salaire/",
    "@plandialog/plan$": "<rootDir>/src/app/modules/plan/",
    "@plandialog/domain$": "<rootDir>/src/app/domain/",
    "@plandialog/shared$": "<rootDir>/src/app/shared/",
    "@plandialog/core$": "<rootDir>/src/app/core/",
    "@plandialog/(.*)$": "<rootDir>/src/app/$1"
  }
}
